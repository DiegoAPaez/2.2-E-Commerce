{
    "type": "module",
    "scripts": {
        "test": "jest",
        "test:coverage": "jest --coverage"
    },
    "devDependencies": {
        "@babel/core": "^7.26.10",
        "@babel/preset-env": "^7.26.9",
        "babel-jest": "^29.7.0",
        "jest": "^29.7.0"
    },
    "jest": {
        "collectCoverageFrom": [
            "js/**/*.js",
            "!js/vendor/**/*.js",
            "!**/node_modules/**"
        ],
        "coverageThreshold": {
            "global": {
                "statements": 80,
                "branches": 80,
                "functions": 80,
                "lines": 80
            }
        }
    }
}
